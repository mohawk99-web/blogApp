<%- include("partials/header.ejs") %>
<div class="ui main text container">
	<div class="ui huge header">Blog App</div>
	<div class="ui top attached segment">
		<div class="ui divided items">
			<% blogs.forEach(function(Blog){ %>
			<div class="item">
				<div class="image">
					<img src="<%= Blog.image %>">
				</div>
				<div class="content">
					<a class="header" href="/blogs/<%= Blog._id %>"><%= Blog.title %></a>
					<div class="meta">
						<span><%= Blog.created.toDateString() %></span>
					</div>
					<div class="description">
						<% if(Blog.body && Blog.body.length > 0){%><p><%= Blog.body.substring(0, 100) %>...</p><%}%>
					</div>
					<div class="extra">
						<a class="ui floated basic violet button" href="/blogs/<%= Blog._id %>">
							Read More
							<i class="right chevron icon"></i>
						</a>
					</div>
				</div>	
			</div>
			<% }); %>
		</div>
	</div>
</div>
<%- include("partials/footer.ejs") %>
